{
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "type": "AdaptiveCard",
  "version": "1.5",
  "body": [
    {
      "type": "TextBlock",
      "size": "Medium",
      "weight": "Bolder",
      "text": "{{SaveQueryFormTitle}}",
      "horizontalAlignment": "Center",
      "wrap": true,
      "style": "heading"
    },
    {
      "type": "Input.Text",
      "id": "EnteredQuery",
      "label": "{{EnteredQueryLabel}}",
      "isRequired": true,
      "errorMessage": "{{EnteredQueryErrorMessage}}",
      "value": "{{SavedQueryString}}",
      "placeholder": "https://microsoft.visualstudio.com/project/_queries/query/queryId"
    },
    {
      "type": "ColumnSet",
      "columns": [
        {
          "type": "Column",
          "width": "auto",
          "verticalContentAlignment": "Center",
          "items": [
            {
              "type": "Input.Toggle",
              "id": "IsTopLevel",
              "title": "{{IsTopLevelTitle}}",
              "valueOn": "true",
              "valueOff": "false",
              "value": "{{IsTopLevel}}"
            }
          ]
        }
      ]
    }
  ],
  "actions": [
    {
      "type": "Action.Submit",
      "title": "{{SaveQueryActionTitle}}",
      "data": {
        "id": "SaveQueryAction"
      }
    }
  ]
}