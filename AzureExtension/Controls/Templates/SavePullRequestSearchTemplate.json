{
  "type": "AdaptiveCard",
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "version": "1.6",
  "body": [
    {
      "type": "Container",
      "items": [
        {
          "type": "Input.Text",
          "placeholder": "Enter Repository URL",
          "id": "url",
          "value": "{{url}}",
          "label": "Enter Repository URL",
          "style": "Url",
          "isRequired": true,
          "errorMessage": "Must enter repository URL"
        },
        {
          "type": "Input.Text",
          "placeholder": "Pull Request Search Title",
          "id": "title",
          "label": "Pull Request Search Title",
          "value": "{{enteredTitle}}"
        },
        {
          "type": "Input.ChoiceSet",
          "choices": [
            {
              "title": "Mine",
              "value": "Mine"
            },
            {
              "title": "Assigned to Me",
              "value": "Assigned"
            },
            {
              "title": "All",
              "value": "All"
            }
          ],
          "label": "View",
          "value": "{{selectedView}}",
          "id": "view",
          "isRequired": true
        },
        {
          "type": "Container",
          "$when": "${message != null}",
          "items": [
            {
              "type": "TextBlock",
              "text": "${message}",
              "wrap": true,
              "size": "Small"
            }
          ],
          "style": "warning"
        }
      ]
    }
  ],
  "actions": [
    {
      "type": "Action.Submit",
      "title": "Save",
      "data": {
        "id": "SavePullRequestSearchAction"
      }
    }
  ]
}
